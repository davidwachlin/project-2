<div class="card bg-light my-5">
    <div class="container">

        <div class="my-3">
            <div class="card bg-light border text-center rounded shadow">

                <div class="card-body">
                    <h4 class="card-title">{{question.title}}</h4>
                    <div id="description">
                        <p class="card-text">{{question.description}}</p>
                    </div>
                    <div class="">
                        <hr>
                        <small class="text-muted">Quesiton ID: {{question._id}}</small>
                    </div>
                    <div class="my-1">
                        <small class="text-muted">Created at: {{question.createdAt}}</small>
                    </div>
                    <a href="/questions/{{question._id}}/edit" class="btn btn-outline-info btn-sm"> Edit Question</a>
                    <div class="my-1">
                        <a href="/questions/{{question._id}}/answers/new" class="btn btn-outline-info btn-sm">Answer
                            Question</a>
                    </div>


                </div>
            </div>
        </div>













        <div class="my-1 text-center">
            <h4><a href="/questions/{{question._id}}/answers" class="text-dark text-center">Answers</a></h4>
        </div>

    </div>
    {{#each answers}}
    <div class="card bg-light border rounded shadow container  mb-3">
        <div id="answer">
            {{answer}}
        </div>

        <div id="createdAt">
            <small class="text-muted">{{createdAt}}</small>
        </div>

        <div id="answerid">
            <small class="text-muted">{{_id}}</small>
        </div>


        <form action="/questions/{{questionId}}/answers/{{_id}}?_method=DELETE" method="post">

            <input class="btn btn-outline-danger my-1" type="submit" value="Delete Answer" />

        </form>

        <a href="/questions/{{questionId}}/answers/{{_id}}/edit" class="btn btn-outline-info my-1">Edit Answer</a>
    </div>

    {{/each}}

</div>
</div>